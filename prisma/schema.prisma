generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Product {
  id          String      @id @default(cuid())
  name        String
  slug        String      @unique
  shopifySlug String?     // Actual Shopify product handle for linking
  description String      @db.Text
  price       Decimal     @db.Decimal(10, 2)
  salePrice   Decimal?    @db.Decimal(10, 2)
  images      String[]
  category    String
  collection  String
  ingredients String?     @db.Text
  benefits    String?     @db.Text
  howToUse    String?     @db.Text
  inStock     Boolean     @default(true)
  featured    Boolean     @default(false)
  active      Boolean     @default(true) // Whether product exists on Shopify
  createdAt   DateTime    @default(now())
  updatedAt   DateTime    @updatedAt
  orderItems  OrderItem[]
  cartItems   CartItem[]

  // Shopify Integration Fields
  shopifyProductId  String?   // Shopify GID (gid://shopify/Product/123)
  shopifyVariantId  String?   // Default variant ID for cart functionality
  inventory         Int       @default(0)  // Current stock level
  lowStockThreshold Int       @default(5)  // Show "Only X left" below this
  lastSyncedAt      DateTime? // When product was last synced from Shopify

  // Skin concern matching
  skinConcerns      String[]  // Array of skin concerns this product addresses

  // Indexes for common queries
  @@index([category])
  @@index([collection])
  @@index([active, featured])
  @@index([active, category])
  @@index([shopifyVariantId])
}

model Collection {
  id          String  @id @default(cuid())
  name        String
  slug        String  @unique
  description String?
  image       String?
}

model Customer {
  id            String         @id @default(cuid())
  email         String         @unique
  password      String
  firstName     String
  lastName      String?
  phone         String?
  orders        Order[]
  cart          Cart?
  skinAnalyses  SkinAnalysis[]
  createdAt     DateTime       @default(now())

  // Shopify Integration
  shopifyCustomerId String?    // Shopify GID (gid://shopify/Customer/123)
  shopifySyncedAt   DateTime?  // When customer was synced to Shopify

  // Skincare Goal (gamified scoring)
  skinGoal          SkinGoal   @default(AGE_GRACEFULLY)

  // Growth hacking - Streaks
  currentStreak      Int       @default(0)
  longestStreak      Int       @default(0)
  lastAnalysisDate   DateTime?

  // Growth hacking - Referrals
  totalReferrals         Int      @default(0)
  lifetimeDiscountEarned Decimal  @default(0) @db.Decimal(10, 2)

  // Referral relationships
  referralCode      ReferralCode?
  referralsGiven    Referral[]     @relation("Referrer")
  referralReceived  Referral?      @relation("Referee")
  discountCodes     DiscountCode[]
  spinRewards       SpinReward[]

  // 30-Day Glow Challenge
  glowChallenge     GlowChallenge?
}

model Cart {
  id         String     @id @default(cuid())
  customerId String?    @unique
  customer   Customer?  @relation(fields: [customerId], references: [id])
  sessionId  String?    @unique
  items      CartItem[]
  createdAt  DateTime   @default(now())
  updatedAt  DateTime   @updatedAt
}

model CartItem {
  id        String  @id @default(cuid())
  cartId    String
  cart      Cart    @relation(fields: [cartId], references: [id], onDelete: Cascade)
  productId String
  product   Product @relation(fields: [productId], references: [id])
  quantity  Int     @default(1)

  @@unique([cartId, productId])
}

model Order {
  id              String      @id @default(cuid())
  orderNumber     String      @unique
  customerId      String?
  customer        Customer?   @relation(fields: [customerId], references: [id])
  email           String
  status          OrderStatus @default(PENDING)
  subtotal        Decimal     @db.Decimal(10, 2)
  tax             Decimal     @db.Decimal(10, 2)
  shipping        Decimal     @db.Decimal(10, 2)
  total           Decimal     @db.Decimal(10, 2)
  shippingAddress Json
  billingAddress  Json
  stripeSessionId String?
  items           OrderItem[]
  createdAt       DateTime    @default(now())
  updatedAt       DateTime    @updatedAt

  // Indexes for common queries
  @@index([customerId])
  @@index([email])
  @@index([status])
  @@index([createdAt])
}

model OrderItem {
  id        String  @id @default(cuid())
  orderId   String
  order     Order   @relation(fields: [orderId], references: [id], onDelete: Cascade)
  productId String
  product   Product @relation(fields: [productId], references: [id])
  quantity  Int
  price     Decimal @db.Decimal(10, 2)
  name      String
}

enum OrderStatus {
  PENDING
  PAID
  PROCESSING
  SHIPPED
  DELIVERED
  CANCELLED
  REFUNDED
}

model Admin {
  id       String @id @default(cuid())
  email    String @unique
  password String
  name     String
}

model SkinAnalysis {
  id              String    @id @default(cuid())
  sessionId       String?   // For anonymous users
  customerId      String?   // For logged-in users
  customer        Customer? @relation(fields: [customerId], references: [id])

  originalImage   String    // URL to uploaded image (front view for backwards compat)
  frontImage      String?   // URL to front view (multi-angle)
  leftImage       String?   // URL to left profile (multi-angle)
  rightImage      String?   // URL to right profile (multi-angle)
  agedImage       String?   // URL to AI-generated aged image

  skinType        String?   // oily, dry, combination, normal, sensitive
  conditions      Json      // Array of detected conditions with confidence scores

  recommendations Json?     // Product recommendations based on analysis
  advice          Json?     // Skincare advice/tips

  status          AnalysisStatus @default(PENDING)
  errorMessage    String?   // If analysis failed, store error message

  createdAt       DateTime  @default(now())
  updatedAt       DateTime  @updatedAt

  @@index([sessionId])
  @@index([customerId])
  @@index([customerId, status])
  @@index([createdAt])
}

enum AnalysisStatus {
  PENDING
  PROCESSING
  COMPLETED
  FAILED
}

// Token revocation for security (logout all sessions, password change, etc.)
model RevokedToken {
  id          String   @id @default(cuid())
  customerId  String
  revokedAt   DateTime @default(now())
  reason      String?  // "logout_all", "password_change", "security"
  expiresAt   DateTime // When this revocation record can be cleaned up

  @@index([customerId])
  @@index([expiresAt])
}

// Password reset tokens (stored in DB instead of in-memory for production)
model PasswordResetToken {
  id          String   @id @default(cuid())
  tokenHash   String   @unique // SHA256 hash of the actual token
  email       String
  expiresAt   DateTime
  usedAt      DateTime?
  createdAt   DateTime @default(now())

  @@index([email])
  @@index([expiresAt])
}

// ============================================
// GROWTH HACKING MODELS
// ============================================

// Referral codes for users to share
model ReferralCode {
  id              String     @id @default(cuid())
  code            String     @unique // 8-char unique code
  customerId      String     @unique
  customer        Customer   @relation(fields: [customerId], references: [id], onDelete: Cascade)
  discountPercent Int        @default(10) // Discount for referee
  usageCount      Int        @default(0)
  maxUses         Int?       // null = unlimited
  expiresAt       DateTime?
  createdAt       DateTime   @default(now())
  referrals       Referral[]

  @@index([code])
}

// Track referral relationships
model Referral {
  id             String        @id @default(cuid())
  referrerId     String
  referrer       Customer      @relation("Referrer", fields: [referrerId], references: [id], onDelete: Cascade)
  refereeId      String        @unique
  referee        Customer      @relation("Referee", fields: [refereeId], references: [id], onDelete: Cascade)
  referralCodeId String
  referralCode   ReferralCode  @relation(fields: [referralCodeId], references: [id], onDelete: Cascade)
  status         ReferralStatus @default(PENDING)
  completedAt    DateTime?     // When referee completed first analysis
  rewardedAt     DateTime?     // When referrer received reward
  createdAt      DateTime      @default(now())

  @@index([referrerId])
  @@index([status])
}

enum ReferralStatus {
  PENDING    // Referee signed up but hasn't analyzed
  COMPLETED  // Referee completed first analysis
  REWARDED   // Referrer received discount
}

// Discount codes (generated from various sources)
model DiscountCode {
  id              String        @id @default(cuid())
  code            String        @unique // Unique discount code
  customerId      String?       // null for guest codes
  customer        Customer?     @relation(fields: [customerId], references: [id], onDelete: Cascade)
  discountPercent Int
  type            DiscountType
  used            Boolean       @default(false)
  usedAt          DateTime?
  expiresAt       DateTime
  createdAt       DateTime      @default(now())

  // Shopify sync tracking
  shopifySynced         Boolean   @default(false)
  shopifyPriceRuleId    String?   // Shopify price rule ID
  shopifyDiscountCodeId String?   // Shopify discount code ID

  @@index([customerId])
  @@index([code])
  @@index([expiresAt])
  @@index([shopifySynced])
}

enum DiscountType {
  REFERRAL     // From referring someone
  REFERRED     // From being referred
  STREAK       // From analysis streak
  SPIN         // From spin wheel
  WELCOME      // First-time user
  CHALLENGE    // Completing a challenge
  GUEST        // Guest conversion incentive
}

// Guest sessions for anonymous analysis
model GuestSession {
  id                  String    @id @default(cuid())
  sessionToken        String    @unique
  email               String?   // Captured after analysis
  analysisId          String?   // Linked analysis (if completed)
  convertedCustomerId String?   // If converted to full account
  ipHash              String?   // Hashed IP for rate limiting
  createdAt           DateTime  @default(now())
  expiresAt           DateTime

  @@index([sessionToken])
  @@index([ipHash])
}

// Spin wheel rewards
model SpinReward {
  id              String    @id @default(cuid())
  customerId      String
  customer        Customer  @relation(fields: [customerId], references: [id], onDelete: Cascade)
  analysisId      String    // Which analysis triggered this spin
  discountPercent Int
  discountCode    String    @unique
  claimed         Boolean   @default(false)
  claimedAt       DateTime?
  expiresAt       DateTime  // 24 hours from spin
  createdAt       DateTime  @default(now())

  @@index([customerId])
  @@index([analysisId])
}

// Streak milestones achieved
model StreakMilestone {
  id          String   @id @default(cuid())
  customerId  String
  milestone   Int      // 3, 7, 30, etc.
  rewardCode  String?  // Discount code issued
  achievedAt  DateTime @default(now())

  @@unique([customerId, milestone])
  @@index([customerId])
}

// ============================================
// 30-DAY GLOW CHALLENGE
// ============================================

model GlowChallenge {
  id              String              @id @default(cuid())
  customerId      String              @unique
  customer        Customer            @relation(fields: [customerId], references: [id], onDelete: Cascade)
  startDate       DateTime            @default(now())
  endDate         DateTime
  status          ChallengeStatus     @default(ACTIVE)
  baselineAnalysisId  String?
  baselineHealthScore Int?
  baselineSkinAge     Int?
  finalAnalysisId     String?
  finalHealthScore    Int?
  finalSkinAge        Int?
  checkpoints         ChallengeCheckpoint[]
  completionRewardCode  String?
  shareRewardCode       String?
  referralRewardClaimed Boolean       @default(false)
  transformationShared  Boolean       @default(false)
  transformationSharedAt DateTime?
  createdAt       DateTime            @default(now())
  updatedAt       DateTime            @updatedAt

  @@index([status])
  @@index([endDate])
}

model ChallengeCheckpoint {
  id              String          @id @default(cuid())
  challengeId     String
  challenge       GlowChallenge   @relation(fields: [challengeId], references: [id], onDelete: Cascade)
  day             Int
  analysisId      String?
  healthScore     Int?
  skinAge         Int?
  badgeEarned     String?
  rewardCode      String?
  completed       Boolean         @default(false)
  completedAt     DateTime?
  dueDate         DateTime
  createdAt       DateTime        @default(now())

  @@unique([challengeId, day])
  @@index([challengeId])
  @@index([dueDate])
}

enum ChallengeStatus {
  ACTIVE
  COMPLETED
  ABANDONED
}

// Skincare goal - affects how strictly scores are calculated
enum SkinGoal {
  AGE_NORMALLY       // Relaxed scoring (1.5x weights)
  AGE_GRACEFULLY     // Balanced scoring (2.0x weights) - default
  STAY_YOUNG_FOREVER // Ambitious scoring (2.5x weights)
}
